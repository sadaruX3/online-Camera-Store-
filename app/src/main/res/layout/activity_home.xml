<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.IshotLK.home"
    android:background="@drawable/n1">


    <ImageView
        android:id="@+id/actionbar"
        android:layout_width="55dp"
        android:layout_height="34dp"
        android:translationY="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TVcameralk5"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/imgcart"
        android:layout_width="59dp"
        android:layout_height="39dp"
        android:translationX="350dp"
        android:translationY="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/TVcameralk5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091"
        app:srcCompat="@drawable/cart" />

    <TextView
        android:id="@+id/TVcameralk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display"
        android:text="@string/TVcameralk"
        android:textAlignment="center"
        android:textSize="45sp"
        android:translationX="120dp"
        android:translationY="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127" />

    <SearchView
        android:id="@+id/searchbar"
        android:layout_width="358dp"
        android:layout_height="54dp"
        android:background="@drawable/search_bar"
        android:iconifiedByDefault="false"
        android:queryHint="Search Product"
        android:translationX="30dp"
        android:translationY="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVcameralk5"
        app:layout_constraintVertical_bias="0.035"
        tools:visibility="visible" />

    <FrameLayout
        android:id="@+id/fl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_above="@id/bottom_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundedcorner"
        android:translationY="30dp"
        app:itemBackground="@drawable/orange2"
        app:itemIconTint="@color/white"
        app:menu="@menu/navbar"
        android:clipToOutline="true"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:translationY="195dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/onsc"
                android:layout_width="355dp"
                android:layout_height="250dp"
                android:layout_marginBottom="320dp"
                android:foregroundGravity="center"
                android:translationX="30dp"
                android:translationY="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVcameralk1"
                app:layout_constraintVertical_bias="0.85"
                app:srcCompat="@drawable/sc3"
                tools:ignore="UnknownId" />

            <TextView
                android:id="@+id/tvtopdeals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/courgette"
                android:text="@string/TVtopdeals"
                android:textAlignment="center"
                android:textSize="24sp"
                android:translationY="-300dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="25dp"
                android:translationY="-250dp"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="250dp"
                android:translationY="-380dp"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="113dp"
                android:layout_height="125dp"
                android:translationX="30dp"
                android:translationY="-510dp"
                app:srcCompat="@drawable/camera" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="185dp"
                android:layout_height="100dp"
                android:translationX="220dp"
                android:translationY="-620dp"
                app:srcCompat="@drawable/lens" />

            <TextView
                android:id="@+id/tvcamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvcamera"
                android:textSize="16sp"
                android:translationX="60dp"
                android:translationY="-590dp" />

            <TextView
                android:id="@+id/tvlens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvlens"
                android:translationX="300dp"
                android:translationY="-610dp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="30sp"
                android:translationY="-530dp"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationX="110dp"
                android:translationY="-660dp"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:translationX="20dp"
                android:translationY="-768dp"
                app:srcCompat="@drawable/drone" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:translationX="275dp"
                android:translationY="-890dp"
                app:srcCompat="@drawable/light" />

            <TextView
                android:id="@+id/tvdrone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvdrone"
                android:textSize="16sp"
                android:translationX="70dp"
                android:translationY="-900dp" />

            <TextView
                android:id="@+id/tvlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvlight"
                android:translationX="300dp"
                android:translationY="-920dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>