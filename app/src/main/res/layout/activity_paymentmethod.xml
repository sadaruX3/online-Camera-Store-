<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentmethod"
    android:background="@drawable/mt6">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="921dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:translationX="-20dp"
            android:translationY="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/TVcameralk10"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.091"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/paymentmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="@string/pamentmethod"
            android:textAlignment="center"
            android:textSize="34sp"
            android:translationY="0dp" />


        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/gray1"
            android:translationY="100dp"
            app:srcCompat="@drawable/cartrectangle" />

        <ImageView
            android:id="@+id/buycam2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:translationX="220dp"
            android:translationY="-20dp"
            app:srcCompat="@drawable/visamaster" />


        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/gray1"
            android:translationY="50dp"
            app:srcCompat="@drawable/cartrectangle" />

        <ImageView
            android:id="@+id/cartlens"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:translationX="230dp"
            android:translationY="-100dp"
            app:srcCompat="@drawable/cashondelivery" />

        <TextView
            android:id="@+id/tvtotal"
            android:layout_width="151dp"
            android:layout_height="42dp"
            android:fontFamily="@font/carlito"
            android:text="@string/tvtotal"
            android:textSize="28sp"
            android:translationX="40dp" />

        <TextView
            android:id="@+id/totalprice"
            android:layout_width="214dp"
            android:layout_height="42dp"
            android:fontFamily="@font/carlito"
            android:text="@string/totalprice"
            android:textSize="28sp"
            android:translationX="230dp"
            android:translationY="-40dp" />

        <Button
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange2"
            android:text="@string/ptp"
            android:translationY="20sp" />

        <RadioButton
            android:id="@+id/radiocard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carlito"
            android:text="@string/cp"
            android:textSize="20sp"
            android:translationX="30dp"
            android:translationY="-530dp" />

        <RadioButton
            android:id="@+id/radiocod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carlito"
            android:text="@string/cod"
            android:textSize="20sp"
            android:translationX="30dp"
            android:translationY="-380dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>