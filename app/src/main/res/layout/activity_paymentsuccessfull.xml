<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentsuccessfull"
    android:background="@drawable/mt6">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="921dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">


        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:translationX="-20dp"
            android:translationY="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/TVcameralk10"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.091"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/cardpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="@string/payment"
            android:textAlignment="center"
            android:textSize="34sp"
            android:translationY="0dp" />

        <ImageView
            android:id="@+id/cardpaymentpng"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:translationY="20dp"
            app:srcCompat="@drawable/cardpayment" />


        <ImageView
            android:id="@+id/cardrec"
            android:layout_width="370dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/gray1"
            android:translationY="30dp"
            app:srcCompat="@drawable/payment_rectangle" />


        <TextView
            android:id="@+id/tvsuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/carlito"
            android:text="@string/successfull"
            android:textAlignment="center"
            android:textSize="30sp"
            android:translationY="-190dp" />

        <TextView
            android:id="@+id/tvpayment"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:fontFamily="@font/courgette"
            android:text="@string/order"
            android:textSize="34sp"
            android:translationX="50dp"
            android:translationY="-420dp" />

        <ImageView
            android:id="@+id/master"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:translationY="-390dp"
            app:srcCompat="@drawable/success" />

        <TextView
            android:id="@+id/tvorderdes"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:fontFamily="@font/courgette"
            android:text="@string/orderdes"
            android:textAlignment="center"
            android:textSize="20sp"
            android:translationY="-250dp" />

        <Button
            android:id="@+id/btndone"
            android:layout_width="250sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange2"
            android:text="@string/btndone"
            android:translationY="-180dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>